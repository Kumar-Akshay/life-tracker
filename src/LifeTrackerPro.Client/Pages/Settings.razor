@page "/settings"
@inject CategoryService CategorySvc
@inject SettingsService SettingsSvc
@inject ISnackbar Snackbar

<PageTitle>Settings â€” LifeTracker Pro</PageTitle>

<MudText Typo="Typo.h5" Class="mb-4" Style="font-weight:700;">Settings</MudText>

<MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" TabPanelClass="pa-4"
         Style="background:#1a1830; border-radius:12px;">

    <!-- Categories Tab -->
    <MudTabPanel Text="Categories" Icon="@Icons.Material.Filled.Category">
        @if (_categoriesLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
        }
        else
        {
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mb-3"
                       OnClick="@(() => _showNewCategory = !_showNewCategory)"
                       StartIcon="@Icons.Material.Filled.Add">
                New Category
            </MudButton>

            @if (_showNewCategory)
            {
                <MudPaper Class="pa-3 mb-3" Style="background:#2d2a4a; border-radius:8px;">
                    <MudGrid>
                        <MudItem xs="6" sm="3">
                            <MudTextField @bind-Value="_newCat.Name" Label="Name" Variant="Variant.Outlined" />
                        </MudItem>
                        <MudItem xs="3" sm="2">
                            <MudTextField @bind-Value="_newCat.Letter" Label="Letter" Variant="Variant.Outlined" MaxLength="2" />
                        </MudItem>
                        <MudItem xs="3" sm="2">
                            <MudTextField @bind-Value="_newCat.Code" Label="Code" Variant="Variant.Outlined" />
                        </MudItem>
                        <MudItem xs="6" sm="2">
                            <MudColorPicker @bind-Value="_newCatColor" Label="Color" ShowAlpha="false"
                                           Variant="Variant.Outlined" />
                        </MudItem>
                        <MudItem xs="6" sm="3">
                            <MudTextField @bind-Value="_newCat.GroupName" Label="Group" Variant="Variant.Outlined" />
                        </MudItem>
                    </MudGrid>
                    <MudButton Variant="Variant.Filled" Color="Color.Success" Class="mt-2"
                               OnClick="CreateCategory">Save</MudButton>
                </MudPaper>
            }

            @foreach (var group in _categories.GroupBy(c => c.GroupName ?? "Other").OrderBy(g => g.Key))
            {
                <MudText Typo="Typo.subtitle2" Class="mb-2 mt-3" Style="color:#94A3B8;">@group.Key</MudText>
                @foreach (var cat in group.OrderBy(c => c.SortOrder))
                {
                    <MudPaper Class="pa-2 mb-1" Elevation="0"
                              Style="@($"background:{(cat.IsArchived ? "#1a1830" : "#2d2a4a")}; border-radius:8px; display:flex; align-items:center; gap:12px; opacity:{(cat.IsArchived ? "0.5" : "1")};")">
                        <div style="@($"width:32px; height:32px; border-radius:8px; background:{cat.Color}; display:flex; align-items:center; justify-content:center;")">
                            <span style="color:white; font-weight:700; font-family:'Space Mono',monospace;">@cat.Letter</span>
                        </div>
                        <MudText Style="flex:1;">@cat.Name</MudText>
                        <MudText Typo="Typo.caption" Style="color:#94A3B8;">@cat.Code</MudText>
                        @if (cat.IsArchived)
                        {
                            <MudIconButton Icon="@Icons.Material.Filled.Restore" Size="Size.Small"
                                           OnClick="@(() => RestoreCategory(cat.Id))" />
                        }
                        else
                        {
                            <MudIconButton Icon="@Icons.Material.Filled.Archive" Size="Size.Small"
                                           OnClick="@(() => ArchiveCategory(cat.Id))" />
                        }
                    </MudPaper>
                }
            }
        }
    </MudTabPanel>

    <!-- Tracking Tab -->
    <MudTabPanel Text="Tracking" Icon="@Icons.Material.Filled.Tune">
        @if (_settings is not null)
        {
            <MudGrid>
                <MudItem xs="12" sm="6">
                    <MudSelect @bind-Value="_settings.ThemeMode" Label="Theme" Variant="Variant.Outlined">
                        <MudSelectItem Value="@("Dark")">Dark</MudSelectItem>
                        <MudSelectItem Value="@("Light")">Light</MudSelectItem>
                        <MudSelectItem Value="@("System")">System</MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudSelect @bind-Value="_settings.TimeGranularity" Label="Time Granularity" Variant="Variant.Outlined">
                        <MudSelectItem Value="@("OneHour")">1 Hour</MudSelectItem>
                        <MudSelectItem Value="@("ThirtyMinutes")">30 Minutes</MudSelectItem>
                        <MudSelectItem Value="@("FifteenMinutes")">15 Minutes</MudSelectItem>
                    </MudSelect>
                </MudItem>
            </MudGrid>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4"
                       OnClick="SaveSettings">Save Settings</MudButton>
        }
    </MudTabPanel>

    <!-- Profile Tab -->
    <MudTabPanel Text="Profile" Icon="@Icons.Material.Filled.Person">
        @if (_profile is not null)
        {
            <MudGrid>
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="_profile.FullName" Label="Full Name" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField Value="@_profile.Email" Label="Email" Variant="Variant.Outlined" ReadOnly="true" />
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudTextField @bind-Value="_profile.Timezone" Label="Timezone" Variant="Variant.Outlined" />
                </MudItem>
            </MudGrid>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4"
                       OnClick="SaveProfile">Save Profile</MudButton>
        }
    </MudTabPanel>

    <!-- Data Tab -->
    <MudTabPanel Text="Data" Icon="@Icons.Material.Filled.CloudDownload">
        <MudText Typo="Typo.body1" Class="mb-3">Export your data for backup.</MudText>
        <MudButton Variant="Variant.Outlined" Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.Download" Disabled="true">
            Export Data (Coming Soon)
        </MudButton>
    </MudTabPanel>
</MudTabs>

@code {
    private List<CategoryDto> _categories = new();
    private UserSettingsDto? _settings;
    private UserProfileDto? _profile;
    private bool _categoriesLoading = true;
    private bool _showNewCategory;
    private CreateCategoryRequestDto _newCat = new();
    private MudBlazor.Utilities.MudColor _newCatColor = new("#6366F1");

    protected override async Task OnInitializedAsync()
    {
        await LoadAll();
    }

    private async Task LoadAll()
    {
        _categoriesLoading = true;
        try
        {
            _categories = await CategorySvc.GetAllAsync();
            _settings = await SettingsSvc.GetAsync();
            _profile = await SettingsSvc.GetProfileAsync();
        }
        catch { /* offline fallback */ }
        finally { _categoriesLoading = false; }
    }

    private async Task CreateCategory()
    {
        var result = await CategorySvc.CreateAsync(new CreateCategoryRequestDto
        {
            Code = _newCat.Code,
            Name = _newCat.Name,
            Letter = _newCat.Letter,
            Color = _newCatColor.ToString(MudBlazor.Utilities.MudColorOutputFormats.Hex),
            GroupName = _newCat.GroupName
        });
        if (result is not null)
        {
            Snackbar.Add("Category created!", Severity.Success);
            _showNewCategory = false;
            _newCat = new();
            _categories = await CategorySvc.GetAllAsync();
        }
    }

    private async Task ArchiveCategory(Guid id)
    {
        await CategorySvc.ArchiveAsync(id);
        _categories = await CategorySvc.GetAllAsync();
        Snackbar.Add("Category archived.", Severity.Info);
    }

    private async Task RestoreCategory(Guid id)
    {
        await CategorySvc.RestoreAsync(id);
        _categories = await CategorySvc.GetAllAsync();
        Snackbar.Add("Category restored.", Severity.Success);
    }

    private async Task SaveSettings()
    {
        if (_settings is null) return;
        await SettingsSvc.UpdateAsync(new UpdateSettingsRequestDto
        {
            ThemeMode = _settings.ThemeMode,
            TimeGranularity = _settings.TimeGranularity
        });
        Snackbar.Add("Settings saved!", Severity.Success);
    }

    private async Task SaveProfile()
    {
        if (_profile is null) return;
        await SettingsSvc.UpdateProfileAsync(new UpdateProfileRequestDto
        {
            FullName = _profile.FullName,
            Timezone = _profile.Timezone
        });
        Snackbar.Add("Profile updated!", Severity.Success);
    }
}
